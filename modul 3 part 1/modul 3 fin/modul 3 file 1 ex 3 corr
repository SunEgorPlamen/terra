number = input("Введите число: ")  # вводим число с клавиатуры
total_sum = 0                     # создаем переменную для накопления суммы

for digit in number:              # проходим по каждой цифре в числе
    total_sum += int(digit)       # добавляем цифровое значение цифры к сумме

print("Сумма цифр:", total_sum)   # выводим результат